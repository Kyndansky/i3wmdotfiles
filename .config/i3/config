#sets the monitor arandr configuration so that both monitors are active
exec_always --no-startup-id bash ~/.screenlayout/monitorsSetup.sh

#start picom
exec_always --no-startup-id "killall -q picom; sleep 0.5; picom --animations"
#start autotiling
exec_always --no-startup-id /home/kynda/.local/bin/autotiling

#removed borders and add gaps to windows 
for_window [class="^.*"] border none
default_border none
default_floating_border none
gaps inner 10

#we set up the animated wallpaper using a script
exec_always --no-startup-id bash ~/scripts/startDesktopWallpaper.sh

# Avvia picom e attendi che sia operativo
exec_always --no-startup-id "killall -q picom; sleep 1; picom --animations &"

# Avvia eww con un ritardo maggiore per garantire il supporto al compositore
# Sostituisci il vecchio comando con questo
exec --no-startup-id pkill playerctl
exec_always --no-startup-id "killall eww; sleep 1; ~/eww/target/release/eww daemon && sleep 1 && ~/eww/target/release/eww open bar"
# Disabilita accelerazione (imposta profilo "Flat") e setta la sensibilità
exec_always --no-startup-id xinput set-prop 10 "libinput Accel Profile Enabled" 0, 1, 0
exec_always --no-startup-id xinput set-prop 10 "libinput Accel Speed" 0.3